rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isGroupMember(groupId) {
      return isSignedIn() && 
             request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.memberIds;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles (needed for group members to see each other)
      allow read: if isSignedIn();
      // Users can only write their own data
      allow write: if isOwner(userId);
    }
    
    // Groups collection
    match /groups/{groupId} {
      // Allow reading groups for authenticated users (needed for arrayContains queries)
      // Individual document access is checked below
      allow read: if isSignedIn();
      // Only authenticated users can create groups
      allow create: if isSignedIn();
      // Only group members can update groups
      allow update: if isSignedIn() && request.auth.uid in resource.data.memberIds;
      // Only the group creator can delete the group
      allow delete: if isSignedIn() && request.auth.uid == resource.data.createdBy;
    }
    
    // Trips collection (subcollection of groups)
    match /groups/{groupId}/trips/{tripId} {
      // Group members can read all trips
      allow read: if isGroupMember(groupId);
      // Group members can create trips
      allow create: if isGroupMember(groupId);
      // Trip organizer or admin can update
      allow update: if isGroupMember(groupId);
      allow delete: if isGroupMember(groupId);
    }
    
    // Activities collection (subcollection of trips)
    match /groups/{groupId}/trips/{tripId}/activities/{activityId} {
      // Group members can read all activities
      allow read: if isGroupMember(groupId);
      // Group members can create/update/delete activities
      allow create: if isGroupMember(groupId);
      allow update: if isGroupMember(groupId);
      allow delete: if isGroupMember(groupId);
    }
    
    // Chat messages (subcollection of groups)
    match /groups/{groupId}/chat/{messageId} {
      // Group members can read chat
      allow read: if isGroupMember(groupId);
      // Group members can send messages
      allow create: if isGroupMember(groupId);
      // Can only delete own messages
      allow delete: if isOwner(resource.data.senderId);
      // Cannot update messages
      allow update: if false;
    }
    
    // Trip proposals (subcollection of groups - organizer only)
    match /groups/{groupId}/proposals/{proposalId} {
      // Only the current organizer can read/write proposals
      allow read, write: if isSignedIn() && 
                            request.auth.uid == get(/databases/$(database)/documents/groups/$(groupId)).data.currentOrganizerId;
    }
    
    // Memories collection (subcollection of trips)
    match /groups/{groupId}/trips/{tripId}/memories/{memoryId} {
      // Group members can read all memories
      allow read: if isGroupMember(groupId);
      // Group members can create memories
      allow create: if isGroupMember(groupId);
      // Creator can update their own memories, group members can add reactions
      allow update: if isGroupMember(groupId);
      // Creator can delete their own memories
      allow delete: if isGroupMember(groupId);
    }
    
    // Planned activities collection (subcollection of trips)
    match /groups/{groupId}/trips/{tripId}/plannedActivities/{activityId} {
      // Group members can read all planned activities
      allow read: if isGroupMember(groupId);
      // Only trip organizer can create/update/delete activities
      allow write: if isSignedIn() && 
                   request.auth.uid == get(/databases/$(database)/documents/groups/$(groupId)).data.currentOrganizerId;
    }
  }
}
